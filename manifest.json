{
    "manifest_version": 3,
    "name": "HoverRefs",
    "version": "1.1.1",
    "description": "Displays a link's HREF dynamically when hovered. Developed By Rhys Lodding.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  